<h2 class="subTitle">All requested design work</h2>
<%= link_to 'New Request', new_document_path, :class => "newRequest" %>

<p id="notice"><%= notice %></p>

<ul id="workList">
<% @documents.each do |document| %>
  <li>
    <h3 class="listHeaders"><%= link_to document.name, edit_document_path(document) %></h3>
    <p class="description"><%= document.description.truncate(40) %></p>
	<p class="status"><%= document.status_name %></p>
    <p class="deadline"><em><%= document.deadline_left %></em></p>
	<p>Assigned to <%= document.assigned_to %></p>


    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Delete', document, :confirm => 'Are you sure?', :method => :delete %></td>
  </li>
<% end %>
</ul>


